/* pages/search-box/index.wxss */
page{
  padding: 0 20rpx;
  margin-top: 54px;
}
.header{
  position: fixed;
  top: 0;
  left: 20rpx;
  right: 20rpx;
  width: 100%;
}
.van-cell__left-icon-wrap{
  margin-right: 12rpx !important;
}
.van-search__content{
  background-color: #fff  !important;
}
.van-search{
  padding: 10px 0 !important;
}

.keywords{
  padding: 18rpx;
  font-size: 32rpx;
  display: flex;
  flex-wrap: wrap;
}
.tag{
  background-color: rgb(236, 231, 231);
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  font-weight: 500;
}
.tag:first-child{
  color: #26ce8a;
}
.search{
  padding: 10rpx;
}
.search .title{
  color: #26ce8a;
  font-weight: 700;
  font-size: 34rpx;
  margin-bottom: 10rpx;
}

.search .list .item{
  display: flex;
  align-items: center;
  margin-top: 16rpx;
 
}
.search .list .icon{
  width: 66rpx;
  margin-left: -20rpx;
}
.search .list .rich-text{
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 4rpx solid rgb(235, 232, 232);
}
/* 搜索结果 */
.result .title{
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  margin-top: 18rpx;
}
