/* components/ranking-song-v2/index.wxss */

.ranking-item{
  /* position: relative; */
  justify-content: space-between;
  display: flex;
  background-color: rgb(223, 219, 219);
  font-size: 30rpx;
  margin: 20rpx 0;
}
.left{
  width:450rpx;
  /* flex:3; */
  padding:24rpx 16rpx
}
.title{
  font-size: 38rpx;
  font-weight: 600;
}
.name-list{
  /* display: flex; */
  margin-top:16rpx;

  /*只显示一行*/
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  text-emphasis: none;
}
.singer{
  color: #999;
}
.right{
  position: relative;
  flex:1
}
.coverImg{
  width: 100%;
  height: 100%;
}
.playcount{
  position: absolute;
  bottom: 0rpx;
  right: 0;
  color: aliceblue;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
  font-size: 22rpx;
  padding: 6rpx 10rpx;
}