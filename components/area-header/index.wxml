<!--components/area-header/index.wxml-->
<view class="header">
  <view class="left">
    {{leftText}}
  </view>
  <view class="right">
    <view class="slot"><slot></slot></view>
    <view class="right-default" wx:if="{{showArrow}}" >
      <text>{{rightText}}</text>
      <image  class="icon" src="/assets/images/icons/arrow-right.png" alt="" mode="widthFix" />
    </view>
  </view>
</view>